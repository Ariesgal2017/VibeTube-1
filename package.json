{
  "name": "django_tailwind",
  "description": "",
  "scripts": {
    "start": "npm run build && npm run dev",
    "build": "npm run build:clean && npm run build:sass && npm run build:postcss && npm run build:cleancss",
    "build:clean": "./theme/static_src/node_modules/.bin/rimraf ./theme/static/css",
    "build:sass": "./theme/static_src/node_modules/.bin/node-sass --output-style compressed ./theme/static_src/src/styles.scss ./theme/static/css/styles.css",
    "build:postcss": "./theme/static_src/node_modules/.bin/cross-env NODE_ENV=production ./theme/static_src/node_modules/.bin/postcss --config . --map false --output ./theme/static/css/styles.css ./theme/static/css/styles.css",
    "build:cleancss": "./theme/static_src/node_modules/.bin/cleancss -o ./theme/static/css/styles.css ./theme/static/css/styles.css",
    "dev": "watch \"npm run dev:sass && npm run dev:postcss\" ./theme/static_src/src",
    "dev:sass": "./theme/static_src/node_modules/.bin/node-sass --output-style expanded --source-map true ./theme/static_src/src/styles.scss ./theme/static/css/styles.css",
    "dev:postcss": "./theme/static_src/node_modules/.bin/postcss --config . --map true --output ./theme/static/css/styles.css ./theme/static/css/styles.css"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.0.2",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^7.0.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "postcss-scss": "^3.0.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.1",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": "15.x"
  }
}
